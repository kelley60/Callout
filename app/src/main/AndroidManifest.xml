<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="seanmkelley.callout" >

    <application
        android:uiOptions="splitActionBarWhenNarrow"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ui.MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ClubMasterList"
            android:label="@string/title_activity_club_master_list"
            android:parentActivityName="ui.MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MyActivity" />

            <intent-filter>
                <action android:name="ClubMasterList" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Favorites"
            android:label="@string/title_activity_favorites"
            android:parentActivityName="ui.MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MyActivity" />

            <intent-filter>
                <action android:name="Favorites" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Calendar"
            android:label="@string/title_activity_calendar"
            android:parentActivityName="ui.MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MyActivity" />

            <intent-filter>
                <action android:name="Calendar" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PersonalDetails"
            android:label="@string/title_activity_personal_details"
            android:parentActivityName="ui.MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MyActivity" />

            <intent-filter>
                <action android:name="PersonalDetails" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ClubPage"
            android:label="@string/title_activity_club_page"
            android:parentActivityName="ui.MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MyActivity" />
        </activity>
    </application>

</manifest>
