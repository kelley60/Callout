<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="seanmkelley.callout.PersonalDetails"
    android:background="@android:color/holo_blue_light">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports"
        android:id="@+id/personalDetailsSportsCheckId"
        android:textSize="36dp"
        android:layout_marginTop="144dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Academic"
        android:id="@+id/personalDetailsAcademicCheckId"
        android:layout_below="@+id/personalDetailsSportsCheckId"
        android:layout_alignLeft="@+id/personalDetailsSportsCheckId"
        android:layout_alignStart="@+id/personalDetailsSportsCheckId"
        android:textSize="36dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hobby"
        android:id="@+id/personalDetailsHobbyId"
        android:layout_below="@+id/personalDetailsAcademicCheckId"
        android:layout_alignLeft="@+id/personalDetailsAcademicCheckId"
        android:layout_alignStart="@+id/personalDetailsAcademicCheckId"
        android:textSize="36dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other"
        android:id="@+id/personalDetailsOtherCheckId"
        android:layout_below="@+id/personalDetailsHobbyId"
        android:layout_alignLeft="@+id/personalDetailsHobbyId"
        android:layout_alignStart="@+id/personalDetailsHobbyId"
        android:textSize="36dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you interested in..."
        android:id="@+id/personalDetailsHeaderId"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:paddingTop="30dp"/>


    <!--
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/personDetailsBackButtonId"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
        -->

</RelativeLayout>
